<div class="col-md-8">
    
    
    <%= form_for @blog do |f| %>
        <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title, class: 'form-control', placeholder: "Blog Title?" %>
        </div>
        <div class="form-group">
            <%= f.label :body %>
            <%= f.text_area :body, rows: 10, class: 'form-control', placeholder: "Blog content" %>
        </div>
        <div class="form-group">
            <%= f.submit "Add Blog Post!", class: 'btn btn-success'%>
        </div>
    <% end %>    
</div>